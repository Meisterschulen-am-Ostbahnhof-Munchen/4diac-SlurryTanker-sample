	<FunctionBody>
		<ST><![CDATA[FUNCTION QUARTERS_TO_WORD

VAR_INPUT
	IN_00 : BYTE;    // QUARTER BYTE 00
	IN_01 : BYTE;    // QUARTER BYTE 01
	IN_02 : BYTE;    // QUARTER BYTE 02
	IN_03 : BYTE;    // QUARTER BYTE 03
	IN_04 : BYTE;    // QUARTER BYTE 04
	IN_05 : BYTE;    // QUARTER BYTE 05
	IN_06 : BYTE;    // QUARTER BYTE 06
	IN_07 : BYTE;    // QUARTER BYTE 07
END_VAR

VAR_OUTPUT
	OUT : WORD;    // WORD Output
END_VAR

(* this Function combines the 8 QUARTER BYTES to a word *)
OUT := SHL(BYTE_TO_WORD(IN_07), SHFT_QUARTER_07) 
	OR SHL(BYTE_TO_WORD(IN_06), SHFT_QUARTER_06) 
	OR SHL(BYTE_TO_WORD(IN_05), SHFT_QUARTER_05) 
	OR SHL(BYTE_TO_WORD(IN_04), SHFT_QUARTER_04)
	OR SHL(BYTE_TO_WORD(IN_03), SHFT_QUARTER_03) 
	OR SHL(BYTE_TO_WORD(IN_02), SHFT_QUARTER_02) 
	OR SHL(BYTE_TO_WORD(IN_01), SHFT_QUARTER_01)
	OR SHL(BYTE_TO_WORD(IN_00), SHFT_QUARTER_00);

END_FUNCTION
]]></ST>
	</FunctionBody>
</Function>
